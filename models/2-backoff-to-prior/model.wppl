 {BEL: 0, CC: 1},
 {BEL: 0, CC: 0}
]

// non-uniform state prior for PL, based on CCprior ("higher" or "lower")
var statePrior = function(CCprior) {
 return CCprior == "higher" ? categorical({
   vs: worldState,
   ps: [4,1,4,1]}) : categorical({
   vs: worldState,
   ps: [2,1,2,1]})

}

